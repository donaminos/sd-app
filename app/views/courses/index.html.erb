<div class="container margin-navbar-top">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
       <div class="pull-left">
        <%= link_to 'Back to program', levels_path, class: "btn btn-info" %>
      </div>
      <% if policy(@courses).create? %>
      <div class="pull-right">
        <%= link_to 'New course', new_level_course_path, class: "btn btn-info" %>
      </div>
      <% end %>
    </div>
  </div>
 <h1 class="text-center text-info">
        <%= @level.name.upcase %>
      </h1>
  <br>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

     <% @courses.each do |course| %>

     <div class="panel panel-default panel-sd">

     <!-- <div class="panel-sd-tags ">
        <span class="alert panel-tag-bkg tag-bkg-primary">#DEV</span>
      </div> -->

      <div class="panel-heading">
        <% if user_signed_in? %>
        <h2><%= link_to course.title, course_lessons_path(course) %></h2>
        <% else %>
        <h2><%= link_to course.title, course %></h2>

        <% end %>

      </div>
      <div class="panel-body">
        <p class="lead"> <%= course.description %> </p>

      </div>
      <div class="panel-footer">

        <% if user_signed_in? %>
        <%= link_to '< Start >', course_lessons_path(course), class: "btn btn-primary" %>
        <% else %>
        <%= link_to '< Start >', course, class: "btn btn-primary" %>
        <% end %>
        <% if policy(course).update? %>

        <%= link_to 'Edit', edit_course_path(course) , class: "btn btn-warning"%>

        <%= link_to 'Destroy', course, :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger" %>
        <% end %>
        <span class="pull-right text-red">Updated:&nbsp;<%= course.updated_at.strftime("%d/%m/%Y") %></span>
      </div>

    </div>


    <% end %>


  </div>
</div>
</div>

