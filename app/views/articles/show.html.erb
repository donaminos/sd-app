

<div class="container">
	<div class="row">
   <div class="col-md-8 col-md-offset-1 panel panel-default post-container" >

    <!-- First Blog Post -->
    <h2 class="text-blue">
      <%= @article.title %>
    </h2>

    <div class="post-header-line">

      <span class="glyphicon glyphicon-calendar">

      </span><%= @article.created_at %>

    </div>

    <div class="post-content text-justify">
      <p>  <%= raw coderay @article.body %> </p>
    </div>



    <%= link_to 'Back', articles_path, class: "btn btn-default" %>       
 
    <% if policy(@article).update? %>
      <%= link_to 'Edit', edit_article_path(@article) , class: "btn btn-warning"%>
 
      <%= link_to 'Destroy', @article, :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger" %>
    <% end %>

  </div>

  <div class="col-md-3">
    <div class="panel panel-default sidebar-wrapper">

      <div class="sidebar-header">
        Keep in touch
      </div>
      <div class="sidebar-content text-center">
        <ul class="list-unstyled list-inline">
          <li>
            <a class="btn btn-follow follow-facebook" href="https://www.facebook.com/StartupDecode" target="_blank"><i class="fa fa-facebook"></i></a>
          </li>

          <li>
            <a class="btn btn-follow follow-twitter" href="https://twitter.com/startupdecode" target="_blank"><i class="fa fa-twitter"></i></a>
          </li>

          <li>
            <a class="btn btn-follow follow-youtube" href="https://www.youtube.com/user/startupdecode" target="_blank"><i class="fa fa-youtube"></i></a>
          </li>

          <li><a class="btn btn-follow follow-google" href="https://plus.google.com/u/0/b/102647492508846401173/102647492508846401173/posts" target="_blank"><i class="fa fa-google-plus"></i></a>
          </li>
        
        </ul>
     
      </div>

    </div>
  </div>

</div>
</div>

