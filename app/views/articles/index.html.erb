<div class="container margin-navbar-top">

  <div class="row">
      <div class="col-md-8 col-md-offset-2">
      
            <% if policy(@articles).create? %>
            <div class="pull-right">
              <%= link_to 'New article', new_article_path, class: "btn btn-info" %>
            </div>
          <% end %>
          <h1 class="">Articles</h1>
  <br>
              <% @articles.each do |article| %>

                <div class="[ panel panel-default ] panel-sd">
             
                    <div class="panel-sd-tags ">
                      <span class="panel-tag-bkg tag-bkg-primary">#DEV</span>
                    </div>
                    
                    <div class="panel-heading">
       
                        <h2><%= link_to article.title , article %></h2>
                       
                    </div>
                    <div class="panel-body">
                        <p class="lead"> <%= 
                        
                            truncate_html(article.body, length: 400 )
                              %> 
                        </p>
                    </div>
                    <div class="panel-footer ">
                       <%= link_to '< Read >', article, class: "btn  btn-primary" %>
                   
                      <% if policy(article).update? %>
                        <%= link_to 'Edit', edit_article_path(article) , class: "btn btn-warning"%>

                        <%= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger" %>
                      
                      <% end %>

                    </div>
                
                </div>
       

              <% end %>
           

          <br>

         


      </div>
  </div>
</div>

