<div class="container margin-navbar-top">

  <div class="row">

    <div class="col-md-8 col-md-offset-1">
      <% if policy(@articles).create? %>
      <div class="pull-right">
        <%= link_to 'New article', new_article_path, class: "btn btn-info" %>
      </div>
      <% end %>

    </div>

  </div>
  <br>
  <div class="row">

    <div class="col-md-8 col-md-offset-1">

      <% @articles.each do |article| %>

      <div class="panel panel-default panel-sd">

        <div class="panel-heading">
          <h2 class="post-title text-blue"><%= link_to article.title , article %></h2> 
          <time class="post-date"><%= article.created_at.strftime("%d/%m/%Y") %></time>                    
        </div>
        <div class="panel-body">
         <% if article.image? %> 
         <div class="post-image">
          <%= image_tag article.image.url , class: 'img-thumbnail img-responsive' %>
        </div>
        <% end %>
        <div class="post-teaser text-justify">
          <%= 
          truncate_html(article.body, length: 300 )
          %> 

        </div>
      </div>
      <div class="panel-footer ">
       
       <%= link_to '< Read >', article, class: "btn  btn-primary" %>

       <% if policy(article).update? %>
       <%= link_to 'Edit', edit_article_path(article) , class: "btn btn-warning"%>

       <%= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger" %>

       <% end %>

     </div>

   </div>

   <div class="text-center">
     <%= paginate @articles %>
   </div>

   <% end %>


   <br>




 </div>

 <div class="col-md-3">
  <%= render 'sidebar' %>
</div>

</div>
</div>

