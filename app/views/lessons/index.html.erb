
<div class="container">
  <div class="row">

    <div class="panel panel-default panel-default panel-sd panel-course-detail">



      <div class="panel-heading text-center" style="">

        <h2 class="text-blue"><%= @course.title %></h2>

      </div>
      <div class="panel-body">


        <div class="col-md-3 lessons-menu bhoechie-tab-menu">


          <div class="list-group">
            <%= link_to '00 - A propos' , course_lessons_path(@course), class: "list-group-item active" %>

            <% @lessons.each do |lesson| %>



            <%= link_to lesson.description , [lesson.course, lesson], class: "list-group-item" %>



            <% end -%>



          </div>

        </div>

        <div class="col-md-9 lesson-content">


          <div class="lesson-note">
            <h3 class="fa fa-info-circle sd-green-color"> A propos de ce cours:</h3>

            <p class="lead">
              <%= @course.description %>
            </p>

          </div>

        </div>

      </div>

    </div>
  </div>
</div>

